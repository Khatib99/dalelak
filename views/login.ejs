<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login Page</title>
        <link rel="stylesheet" href="css/login-style.css">
    </head>
    <body>
        <% if (status.try){ %>
            <script>window.alert('Username or password is incorrect..!!')</script>
        <% } %>
        <div class="Wrapper">
            <div class="LeftContainer">
                <nav class="LeftNavBar">
                    <img class="Logo" src="images/logo-.png">
                    <div class="Navbar-List">
                        <a  class="nav-item">Sign In</a>
                        <a class="nav-item">Help Me</a>
                    </div>
                </nav>
                <div class="Login-Container">
                    <form class="form1" action="log-in" method="post">
                        <h2>Sign In</h2>
                        <input type="email" placeholder="   Enter Username" name='username' class="input" required>
                        <input type="password" placeholder="   Enter Password" name='password' class="input" required>
                        <div class="checkbox-container">
                            <input type="checkbox" class="checkbox">
                            <p>Stay signed in</p>
                        </div>
                        <button class="sign-button">Sign In</button>
                        <a class="forgot">Forgot password?</a>
                    </form>
                </div>
            </div>
            <div class="RightContainer">
            </div>
        </div>
    </body>
</html>